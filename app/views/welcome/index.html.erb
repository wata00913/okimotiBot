<h1>Welcome#index</h1>
<h1 class="text-3xl font-bold underline">
  Hello world!
</h1>
<p>Find me in app/views/welcome/index.html.erb</p>

<div class="flex flex-col">
  <% if user_signed_in? %>
    <%= link_to t('users.shared.links.sign_out'), destroy_user_session_path, data: { turbo_method: :delete }, class: 'text-blue-500 hover:underline' %>
  <% else %>
    <%= link_to t('users.shared.links.sign_in'), new_user_session_path, class: 'text-blue-500 hover:underline' %>
  <% end %>
  <%= link_to t('users.shared.links.sign_up'), new_user_registration_path, class: 'text-blue-500 hover:underline' %>
</div>
